<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Orderer List</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/styleCategory2.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <header>
        <h2 class="logo">UrHotel</h2>
        <nav class="navigation">
            <a href="/homeLogin">Home</a>
            <a href="">About</a>
            <a href="/categories">Types</a>
            <a href="/rooms">Book</a>
            <a href="">Contact</a>
            <a href="/profiles">Profile</a>
        </nav>
    </header>

    <div class="container">
        <h1>Orderer List</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Check In</th>
                    <th scope="col">Check Out</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <%dataSchedule.forEach(el => { %>
                    <tr>
                        <td><%= el.ordererName %></td>
                        <td><%= el.email %></td>
                        <td><%= el.formattedCheckIn()%></td>
                        <td><%= el.formattedCheckOut() %></td>
                        <td>
                            <a class="btn btn-warning" href="/roomList/<%= el.id %>/delete">Delete</a>
                        </td>
                    </tr>
                    
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>